<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="90dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        >

        <ImageView
            android:id="@+id/tb"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:text="最高成绩：98"
            style="@style/scores_item_style"
            android:id="@+id/mz"
            android:layout_marginStart="120dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:text="课程性质：必修课"
            style="@style/scores_item_style"
            android:layout_below="@id/mz"
            android:layout_alignStart="@id/mz"
            android:layout_marginTop="5dp"
            android:id="@+id/bm"
            />
        <TextView
            android:text="平时成绩：88"
            style="@style/scores_item_style"
            android:id="@+id/dx"
            android:layout_alignStart="@id/bm"
            android:layout_below="@id/bm"
            android:layout_marginTop="5dp"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>