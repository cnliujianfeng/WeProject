<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#3ec44e">

    <item>
        <selector>

        <item android:state_pressed="false">
            <shape>
                <!-- 填充的颜色 -->
                <solid android:color="#fff"/>
                <!-- 设置按钮的四个角为弧形 -->
                <!-- android:radius 弧形的所有半径 -->
                <corners android:radius="5dp"/>
                <!-- 边框的宽度及颜色 -->
                <stroke
                    android:width="0.1dp"
                    android:color="#fff"/>
            </shape>
        </item>
        <!--true 为按下的时候-->
        <item android:state_pressed="true">
        <shape>
            <!--点击之后的颜色-->
            <solid android:color="#efd1"/>
            <corners android:radius="5dp"/>
            <!--点击之后的边框-->
            <stroke
                android:width="0.1dp"
                android:color="#efd1"/>
        </shape>
    </item>
        </selector>
    </item>
</ripple>